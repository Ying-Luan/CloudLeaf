{
  "name": "cloud-leaf",
  "displayName": "Cloud Leaf",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Ying Luan & KamikazEr101",
  "scripts": {
    "dev": "npm run postinstall && plasmo dev",
    "dev:edge": "npm run postinstall && plasmo dev --target=edge-mv3",
    "build": "npm run postinstall && plasmo build",
    "package": "npm run postinstall && plasmo package",
    "postinstall": "node scripts/patch.js"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "@tailwindcss/postcss": "^4.1.18",
    "immer": "^11.1.3",
    "plasmo": "0.90.5",
    "postcss": "^8.5.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "bookmarks",
      "sidePanel",
      "storage"
    ],
    "host_permissions": [
      "https://*/*"
    ]
  }
}
